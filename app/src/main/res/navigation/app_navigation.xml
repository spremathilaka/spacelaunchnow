<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_navigation"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.zotiko.spacelaunchnow.ui.upcominglaunches.list.LaunchEventListFragment"
        android:label="@string/app_name"
        tools:layout="@layout/main_fragment">

        <action
            android:id="@+id/action_mainFragment_to_detailFragment"
            app:destination="@id/detailFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />

    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.zotiko.spacelaunchnow.ui.upcominglaunches.detail.DetailFragment"
        android:label="@string/details_title"
        tools:layout="@layout/fragment_detail">

        <argument
            android:name="selectedData"
            app:argType="com.zotiko.spacelaunchnow.dto.LaunchEventDTO" />

    </fragment>
</navigation>